@{
    ViewData["Title"] = "Đã xảy ra lỗi";
    Layout = null; //layout = null để  xem trọn vẹn, không dùng chung Layout của web
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .error-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .error-code {
            font-size: 10rem;
            font-weight: 900;
            color: #dc3545; /* Màu đỏ cảnh báo */
            text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
            line-height: 1;
        }
        .error-icon {
            font-size: 5rem;
            color: #6c757d;
            margin-bottom: 20px;
        }
        .btn-home {
            background-color: #0d6efd;
            border: none;
            padding: 10px 30px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        .btn-home:hover {
            background-color: #0b5ed7;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
        }
    </style>
</head>
<body>
    <div class="container error-container">
        <div class="error-icon">
            📦
        </div>
        
        <div class="error-code">@ViewData["ErrorCode"]</div>
        
        <h2 class="display-5 fw-bold text-dark mb-3">Đã xảy ra lỗi</h2>
        
        <p class="lead text-secondary mb-5">
            Chức năng bạn đang tìm kiếm.<br>
            @ViewData["ErrorMessenger"]
        </p>

        <a href="/" class="btn btn-primary btn-home btn-lg text-uppercase text-decoration-none">
            Quay về trang chủ
        </a>
        
        <div class="mt-4 text-muted small">
            <p>Error Code:@ViewData["ErrorCode"] | WMS Demo System</p>
        </div>
    </div>
</body>
</html>