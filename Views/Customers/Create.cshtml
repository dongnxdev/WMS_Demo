@model WMS_Demo.Models.Customer

@{
    ViewData["Title"] = "Thêm Khách Hàng Mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-industrial">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="fa-solid fa-plus-circle me-2"></i>Thêm Khách Hàng Mới</h4>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label fw-bold">Tên Khách Hàng</label>
                            <input asp-for="Name" class="form-control rounded-0" placeholder="VD: KH-001" />
                            <span asp-validation-for="Name" class="text-danger small fw-bold"></span>
                        </div>
                        

                        <div class="col-12">
                            <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                            <input asp-for="Address" class="form-control rounded-0" placeholder="Địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="PhoneNumber" type="number" class="form-control rounded-0" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small fw-bold"></span>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <a asp-action="Index" class="btn btn-secondary btn-industrial me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary btn-industrial"><i class="fa-solid fa-save"></i> Lưu dữ liệu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}