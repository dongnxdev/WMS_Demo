@model WMS_Demo.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="container py-4">
    <div class="card card-industrial w-75 mx-auto">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Thông tin chi tiết</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Tên Khách Hàng</dt>
                <dd class="col-sm-8 fw-bold fs-5">@Model.Name</dd>

                <dt class="col-sm-4 text-muted">Địa chỉ</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4 text-muted">Số điện thoại</dt>
                <dd class="col-sm-8"><span class="badge bg-secondary">@Model.PhoneNumber</span></dd>

                
            </dl>
        </div>
        <div class="card-footer bg-white text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-industrial">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-industrial">Quay lại danh sách</a>
        </div>
    </div>
</div>