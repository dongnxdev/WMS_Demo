@model WMS_Demo.Models.InventoryLog

@{
    ViewData["Title"] = "Chi tiết giao dịch";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Chi tiết giao dịch #@Model.Id</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Thời gian</dt>
                <dd class="col-sm-9">@Model.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                <dt class="col-sm-3">Loại hành động</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.ActionType == "INBOUND" ? "bg-success" : "bg-danger")">@Model.ActionType</span>
                </dd>

                <dt class="col-sm-3">Sản phẩm</dt>
                <dd class="col-sm-9">@Model.Item?.Name (@Model.Item?.Code)</dd>

                <dt class="col-sm-3">Số lượng thay đổi</dt>
                <dd class="col-sm-9 fw-bold">@Model.ChangeQuantity.ToString("N0") @Model.Item?.Unit</dd>

                <dt class="col-sm-3">Tồn kho sau GD</dt>
                <dd class="col-sm-9">@Model.NewStock.ToString("N0") @Model.Item?.Unit</dd>

                <hr />

                <dt class="col-sm-3">Giá trị giao dịch</dt>
                <dd class="col-sm-9">@Model.TransactionPrice.ToString("C0")</dd>

                <dt class="col-sm-3">Giá vốn ghi nhận</dt>
                <dd class="col-sm-9">@Model.MovingAverageCost.ToString("C0")</dd>

                <dt class="col-sm-3">Chứng từ tham chiếu</dt>
                <dd class="col-sm-9">#@Model.ReferenceId</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>