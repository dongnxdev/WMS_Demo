@model WMS_Demo.Models.Location

@{
    ViewData["Title"] = "Xóa Vị trí";
}

<div class="container py-5 text-center">
    <div class="alert alert-danger d-inline-block card-industrial" role="alert">
        <h1 class="display-1"><i class="fa-solid fa-triangle-exclamation"></i></h1>
        <h3 class="fw-bold">BẠN CÓ CHẮC CHẮN MUỐN XÓA Vị trí</h3>
        <p class="lead"><strong>@Model.Code</strong></p>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Mã Vị Trí</dt>
                <dd class="col-sm-8 fw-bold fs-5">@Model.Code</dd>

                <dt class="col-sm-4 text-muted">Mô tả</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary btn-lg btn-industrial me-3">Không</a>
            <button type="submit" class="btn btn-danger btn-lg btn-industrial">
                <i class="fa-solid fa-trash-can me-2"></i> Có
            </button>
        </form>
    </div>
</div>
