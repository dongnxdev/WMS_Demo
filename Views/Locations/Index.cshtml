@using WMS_Demo.Helpers
@model PaginatedList<WMS_Demo.Models.Location>

@{
    ViewData["Title"] = "Quản lý Vị trí";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = Context.Request.Query["searchString"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-uppercase text-dark mb-0"><i class="fa-solid fa-map-marker-alt me-2"></i>Vị Trí Kho</h2>
        <span class="text-muted small">Quản lý danh sách các vị trí trong kho</span>
    </div>
    <a asp-action="Create" class="btn btn-success btn-industrial">
        <i class="fa-solid fa-plus me-1"></i> Tạo Vị Trí Mới
    </a>
</div>

<div class="card card-industrial mb-3 border-0 bg-transparent shadow-none">
    <form asp-action="Index" method="get" class="row g-2 align-items-center justify-content-end">
        <div class="col-auto">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Tìm mã hoặc mô tả..." value="@currentFilter">
                <button class="btn btn-dark btn-industrial" type="submit">Tìm kiếm</button>
            </div>
        </div>
    </form>
</div>

<div class="card card-industrial p-0 mb-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="text-uppercase small bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-3">Mã Vị Trí</th>
                        <th class="py-3">Mô tả</th>
                        <th class="text-center py-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 fw-bold text-primary">@item.Code</td>
                                <td class="text-muted">@item.Description</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Sửa"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-box-open fa-3x mb-3 text-secondary"></i>
                                <p class="mb-0">Không tìm thấy dữ liệu nào phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @prevDisabled">
                <a asp-action="Index" asp-route-pageNumber="1" asp-route-searchString="@currentFilter" class="page-link" title="Trang đầu"><i class="fa-solid fa-angles-left"></i></a>
            </li>
            <li class="page-item @prevDisabled">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@currentFilter" class="page-link" title="Trang trước"><i class="fa-solid fa-angle-left"></i></a>
            </li>
            @{
                int startPage = Math.Max(1, Model.PageIndex - 2);
                int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                if (startPage == 1) { endPage = Math.Min(5, Model.TotalPages); }
                if (endPage == Model.TotalPages) { startPage = Math.Max(1, Model.TotalPages - 4); }

                if (startPage > 1)
                {
                    <li class="page-item"><a asp-action="Index" asp-route-pageNumber="1" asp-route-searchString="@currentFilter" class="page-link">1</a></li>
                    if (startPage > 2) { <li class="page-item disabled"><span class="page-link">...</span></li> }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@currentFilter" class="page-link">@i</a>
                    </li>
                }

                if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1) { <li class="page-item disabled"><span class="page-link">...</span></li> }
                    <li class="page-item"><a asp-action="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-searchString="@currentFilter" class="page-link">@Model.TotalPages</a></li>
                }
            }
            <li class="page-item @nextDisabled">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@currentFilter" class="page-link" title="Trang sau"><i class="fa-solid fa-angle-right"></i></a>
            </li>
            <li class="page-item @nextDisabled">
                <a asp-action="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-searchString="@currentFilter" class="page-link" title="Trang cuối"><i class="fa-solid fa-angles-right"></i></a>
            </li>
        </ul>
    </nav>
    <div class="text-center small text-muted mt-2">
        Đang xem trang <strong>@Model.PageIndex</strong> trên tổng số <strong>@Model.TotalPages</strong>
    </div>
}
<style>
    .pagination .page-link { color: #2c3e50; border-radius: 0 !important; border: 1px solid #dee2e6; margin: 0 2px; }
    .pagination .page-item.active .page-link { background-color: #2c3e50; border-color: #2c3e50; color: white; font-weight: bold; box-shadow: 2px 2px 0px #bdc3c7; }
    .pagination .page-link:focus, .pagination .page-link:hover { background-color: #ecf0f1; color: #000; box-shadow: none; }
</style>
