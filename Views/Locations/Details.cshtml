@model WMS_Demo.Models.Location

@{
    ViewData["Title"] = "Chi tiết Vị trí";
}

<div class="container py-4">
    <div class="card card-industrial w-75 mx-auto">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Thông tin chi tiết Vị trí</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Mã Vị Trí</dt>
                <dd class="col-sm-8 fw-bold fs-5">@Model.Code</dd>

                <dt class="col-sm-4 text-muted">Mô tả</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>
        </div>
        <div class="card-footer bg-white text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-industrial">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-industrial">Quay lại danh sách</a>
        </div>
    </div>
</div>
