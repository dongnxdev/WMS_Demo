@model WMS_Demo.Models.ApplicationUser

@{
    ViewData["Title"] = "Thêm Nhân Viên Mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-industrial">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="fa-solid fa-user-shield me-2"></i>Cấp Tài Khoản Mới</h4>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-bold">Họ và Tên</label>
                            <input asp-for="FullName" class="form-control rounded-0" placeholder="Nguyễn Văn A" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                             <label asp-for="StaffCode" class="form-label fw-bold">Mã Nhân Viên</label>
                            <input asp-for="StaffCode" class="form-control rounded-0" placeholder="NV-001" />
                            <span asp-validation-for="StaffCode" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-bold">Email (Dùng để đăng nhập)</label>
                            <input asp-for="Email" type="email" class="form-control rounded-0" placeholder="email@company.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Mật khẩu khởi tạo</label>
                            <input name="password" type="password" class="form-control rounded-0" required />
                        </div>
                         <div class="col-md-6">
                            <label class="form-label fw-bold">Vai trò (Role)</label>
                            <select name="role" class="form-select rounded-0">
                                <option value="User">Nhân viên (User)</option>
                                <option value="Admin">Quản trị viên (Admin)</option>
                            </select>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <a asp-action="Index" class="btn btn-secondary btn-industrial me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary btn-industrial"><i class="fa-solid fa-save"></i> Lưu hồ sơ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}