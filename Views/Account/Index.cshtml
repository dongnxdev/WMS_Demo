@using WMS_Demo.Helpers
@model PaginatedList<WMS_Demo.Models.ApplicationUser>

@{
    ViewData["Title"] = "Quản lý nhân sự";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-uppercase text-dark mb-0"><i class="fa-solid fa-users-gear me-2"></i>Nhân Sự</h2>
        <span class="text-muted small">Quản lý tài khoản và quyền hạn truy cập</span>
    </div>
    <a asp-action="Create" class="btn btn-success btn-industrial">
        <i class="fa-solid fa-user-plus me-1"></i> Thêm nhân viên
    </a>
</div>

<div class="card card-industrial mb-3 border-0 bg-transparent shadow-none">
    <form asp-action="Index" method="get" class="row g-2 align-items-center justify-content-end">
        <div class="col-auto">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Tên, Email, Mã NV..." value="@currentFilter">
                <button class="btn btn-dark btn-industrial" type="submit">Tìm kiếm</button>
            </div>
        </div>
    </form>
</div>

<div class="card card-industrial p-0 mb-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="text-uppercase small bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-3">Mã NV</th>
                        <th class="py-3">Họ và tên</th>
                        <th class="py-3">Email / Username</th>
                        <th class="text-center py-3">Trạng thái</th>
                        <th class="text-center py-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 font-monospace fw-bold text-danger">@item.StaffCode</td>
                                <td class="fw-bold text-primary">@item.FullName</td>
                                <td class="text-muted small">@item.Email</td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success rounded-0">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-0">Vô hiệu</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" title="Sửa"><i class="fa-solid fa-user-pen"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa-solid fa-user-xmark"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-user-slash fa-3x mb-3 text-secondary"></i>
                                <p class="mb-0">Không tìm thấy nhân viên nào.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Phần phân trang giữ nguyên logic như Customer *@
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @prevDisabled">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@currentFilter" class="page-link"><i class="fa-solid fa-angle-left"></i></a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                 <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@currentFilter" class="page-link">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@currentFilter" class="page-link"><i class="fa-solid fa-angle-right"></i></a>
            </li>
        </ul>
    </nav>
}

<style>
    /* Reuse style from Customer Index */
    .pagination .page-link { color: #2c3e50; border-radius: 0 !important; margin: 0 2px; }
    .pagination .page-item.active .page-link { background-color: #2c3e50; border-color: #2c3e50; color: white; box-shadow: 2px 2px 0px #bdc3c7; }
</style>