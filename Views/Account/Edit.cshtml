@model WMS_Demo.Models.ApplicationUser

@{
    ViewData["Title"] = "Cập Nhật Hồ Sơ";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-industrial">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0 fw-bold"><i class="fa-solid fa-user-pen me-2"></i>Cập Nhật Hồ Sơ: @Model.UserName</h4>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-bold">Họ và Tên</label>
                            <input asp-for="FullName" class="form-control rounded-0" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                             <label asp-for="StaffCode" class="form-label fw-bold">Mã Nhân Viên</label>
                            <input asp-for="StaffCode" class="form-control rounded-0" />
                            <span asp-validation-for="StaffCode" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-bold">Email (Read Only)</label>
                            <input asp-for="Email" class="form-control rounded-0 bg-secondary text-white" readonly />
                        </div>

                         <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" id="flexSwitchCheckChecked">
                                <label class="form-check-label fw-bold" for="flexSwitchCheckChecked">Đang hoạt động (Active)</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <a asp-action="Index" class="btn btn-secondary btn-industrial me-2"><i class="fa-solid fa-arrow-left"></i> Hủy</a>
                        <button type="submit" class="btn btn-warning btn-industrial"><i class="fa-solid fa-floppy-disk"></i> Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>