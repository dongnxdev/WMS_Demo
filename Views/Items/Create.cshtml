@model WMS_Demo.Models.Item

@{
    ViewData["Title"] = "Nhập kho mới";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card card-industrial">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0"><i class="fa-solid fa-plus-circle me-2"></i>Thêm Vật tư Mới</h4>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Code" class="form-label fw-bold">Mã SKU (Code)</label>
                            <input asp-for="Code" class="form-control rounded-0" placeholder="VD: VT-001" />
                            <span asp-validation-for="Code" class="text-danger small fw-bold"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Unit" class="form-label fw-bold">Đơn vị tính</label>
                            <input asp-for="Unit" class="form-control rounded-0" placeholder="VD: Cái, Hộp..." />
                            <span asp-validation-for="Unit" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Name" class="form-label fw-bold">Tên vật tư</label>
                            <input asp-for="Name" class="form-control rounded-0" placeholder="Tên vật tư..." />
                            <span asp-validation-for="Name" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SafetyStock" class="form-label fw-bold">Tồn kho an toàn</label>
                            <input asp-for="SafetyStock" type="number" class="form-control rounded-0" />
                            <span asp-validation-for="SafetyStock" class="text-danger small fw-bold"></span>
                            <div class="form-text">Mức tối thiểu cần có trong kho.</div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CurrentStock" class="form-label fw-bold">Tồn kho ban đầu</label>
                            <input readonly='true' asp-for="CurrentStock" type="number" class="form-control rounded-0" value='0' />
                            <span asp-validation-for="CurrentStock" class="text-danger small fw-bold"></span>
                        </div>
                    </div>

                    <div class="mt-4 pt-3 border-top text-end">
                        <a asp-action="Index" class="btn btn-secondary btn-industrial me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                        <button type="submit" class="btn btn-primary btn-industrial"><i class="fa-solid fa-save"></i> Lưu dữ liệu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}