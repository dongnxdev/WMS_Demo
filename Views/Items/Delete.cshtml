@model WMS_Demo.Models.Item

@{
    ViewData["Title"] = "Xóa vật tư";
}

<div class="container py-5 text-center">
    <div class="alert alert-danger d-inline-block card-industrial" role="alert">
        <h1 class="display-1"><i class="fa-solid fa-triangle-exclamation"></i></h1>
        <h3 class="fw-bold">BẠN CÓ CHẮC CHẮN MUỐN XÓA VẬT TƯ</h3>
        <p class="lead"><strong>@Model.Name (@Model.Code)</strong></p>
        @* <p class="mb-0 small">...</p> *@
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Mã SKU (Code)</dt>
                <dd class="col-sm-8 fw-bold fs-5">@Model.Code</dd>

                <dt class="col-sm-4 text-muted">Tên hàng hóa</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 text-muted">Đơn vị tính</dt>
                <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Unit</span></dd>

                <hr class="my-3"/>

                <dt class="col-sm-4 text-muted">Tồn kho hiện tại</dt>
                <dd class="col-sm-8 fw-bold @(Model.CurrentStock < Model.SafetyStock ? "text-danger" : "text-success")">
                    @Model.CurrentStock
                </dd>

                <dt class="col-sm-4 text-muted">Mức an toàn (Min)</dt>
                <dd class="col-sm-8">@Model.SafetyStock</dd>
                <dt class="col-sm-4 text-muted">Đơn giá bình quân</dt>
                <dd class="col-sm-8">@Model.CurrentCost</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary btn-lg btn-industrial me-3">No</a>
            <button type="submit" class="btn btn-danger btn-lg btn-industrial">
                <i class="fa-solid fa-trash-can me-2"></i> Yes
            </button>
        </form>
    </div>
</div>