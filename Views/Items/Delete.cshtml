@model WMS_Demo.Models.Item

@{
    ViewData["Title"] = "Xóa vật tư";
}

<div class="container py-5 text-center">
    <div class="alert alert-danger d-inline-block card-industrial" role="alert">
        <h1 class="display-1"><i class="fa-solid fa-triangle-exclamation"></i></h1>
        <h3 class="fw-bold">BẠN CÓ CHẮC CHẮN MUỐN XÓA VẬT TƯ</h3>
        <p class="lead"><strong>@Model.Name (@Model.Code)</strong></p>
        <p class="mb-0 small">...</p>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary btn-lg btn-industrial me-3">No</a>
            <button type="submit" class="btn btn-danger btn-lg btn-industrial">
                <i class="fa-solid fa-trash-can me-2"></i> Yes
            </button>
        </form>
    </div>
</div>