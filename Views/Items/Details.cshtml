@model WMS_Demo.Models.Item

@{
    ViewData["Title"] = "Chi tiết vật tư";
}

<div class="container py-4">
    <div class="card card-industrial w-75 mx-auto">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i>Thông tin chi tiết</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 text-muted">Mã SKU (Code)</dt>
                <dd class="col-sm-8 fw-bold fs-5">@Model.Code</dd>

                <dt class="col-sm-4 text-muted">Tên hàng hóa</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 text-muted">Đơn vị tính</dt>
                <dd class="col-sm-8"><span class="badge bg-secondary">@Model.Unit</span></dd>

                <hr class="my-3"/>

                <dt class="col-sm-4 text-muted">Tồn kho hiện tại</dt>
                <dd class="col-sm-8 fw-bold @(Model.CurrentStock < Model.SafetyStock ? "text-danger" : "text-success")">
                    @Model.CurrentStock
                </dd>

                <dt class="col-sm-4 text-muted">Mức an toàn (Min)</dt>
                <dd class="col-sm-8">@Model.SafetyStock</dd>
            </dl>
        </div>
        <div class="card-footer bg-white text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-industrial">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary btn-industrial">Quay lại danh sách</a>
        </div>
    </div>
</div>