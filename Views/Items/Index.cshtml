@model IEnumerable<WMS_Demo.Models.Item>

@{
    ViewData["Title"] = "Quản lý Vật tư";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2 class="text-uppercase fw-bold text-primary"><i class="bi bi-box-seam"></i> Danh sách Vật tư Tesst</h2>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name) (Tên)</th>
                            <th>@Html.DisplayNameFor(model => model.Code) (SKU)</th>
                            <th>@Html.DisplayNameFor(model => model.Unit) (ĐVT)</th>
                            <th>@Html.DisplayNameFor(model => model.SafetyStock) (An toàn)</th>
                            <th>@Html.DisplayNameFor(model => model.CurrentStock) (Hiện tại)</th>
                            <th style="width: 250px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="text-center"><span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Code)</span></td>
                                <td class="text-center">@Html.DisplayFor(modelItem => item.Unit)</td>
                                <td class="text-end pe-4">@Html.DisplayFor(modelItem => item.SafetyStock)</td>
                                <td class="text-end pe-4 fw-bold @(item.CurrentStock < item.SafetyStock ? "text-danger" : "text-success")">
                                    @Html.DisplayFor(modelItem => item.CurrentStock)
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Sửa">Sửa</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Chi tiết">Xem</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Xóa">Xóa</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>