@using WMS_Demo.Helpers
@model WMS_Demo.Helpers.PaginatedList<WMS_Demo.ViewModels.ReceiptIndexViewModel>

@{
    ViewData["Title"] = "Quản lý kho hàng";
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    var currentFilter = Context.Request.Query["searchString"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-uppercase text-dark mb-0"><i class="fa-solid fa-truck-fast me-2"></i>Kho Hàng</h2>
        <span class="text-muted small">Quản lý phiếu xuất</span>
    </div>
    <a asp-action="CreateOutbound" class="btn btn-primary btn-industrial">
        <i class="fa-solid fa-plus me-1"></i> Tạo phiếu xuất mới
    </a>
</div>

<div class="card card-industrial mb-3 border-0 bg-transparent shadow-none">
    <form asp-action="OutboundIndex" method="get" class="row g-2 align-items-center justify-content-end">
        <div class="col-auto">
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Tìm KH / Người lập phiếu hoặc mã phiếu xuất..." value="@currentFilter">
                <button class="btn btn-dark btn-industrial" type="submit">Tìm kiếm</button>
            </div>
        </div>
    </form>
</div>

<div class="card card-industrial p-0 mb-3">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="text-uppercase small bg-dark text-white">
                    <tr>
                        <th class="py-3 ps-3">Mã phiếu</th>
                        <th class="py-3">Ngày tạo</th>
                        <th class="text-center py-3">Khách hàng</th>
                        <th class="text-end py-3">Người tạo</th>
                        <th class="text-end py-3">Ghi chú</th>
                        <th class="text-center py-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3 fw-bold text-primary">@item.ReferenceCode</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center"><span class="badge bg-light text-dark border">@item.PartnerName</span></td>
                                <td class="text-end text-muted">@item.CreatedBy</td>
                                <td class="text-end fw-bold fs-6">
                                    @item.Notes
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="OutboundDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="fa-solid fa-circle-info"></i></a>
                                        <a asp-action="DeleteOutbound" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa-solid fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fa-solid fa-box-open fa-3x mb-3 text-secondary"></i>
                                <p class="mb-0">Không tìm thấy dữ liệu nào phù hợp.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            
            <li class="page-item @prevDisabled">
                <a asp-action="OutboundIndex"
                   asp-route-pageNumber="1"
                   asp-route-searchString="@currentFilter"
                   class="page-link" title="Trang đầu">
                    <i class="fa-solid fa-angles-left"></i>
                </a>
            </li>

            <li class="page-item @prevDisabled">
                <a asp-action="OutboundIndex"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link" title="Trang trước">
                    <i class="fa-solid fa-angle-left"></i>
                </a>
            </li>

            @{
                int startPage = Math.Max(1, Model.PageIndex - 2);
                int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);

                if (startPage == 1)
                {
                    endPage = Math.Min(5, Model.TotalPages);
                }
                if (endPage == Model.TotalPages)
                {
                    startPage = Math.Max(1, Model.TotalPages - 4);
                }

                if (startPage > 1)
                {
                     <li class="page-item">
                        <a asp-action="OutboundIndex" asp-route-pageNumber="1" asp-route-searchString="@currentFilter" class="page-link">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a asp-action="OutboundIndex" 
                           asp-route-pageNumber="@i" 
                           asp-route-searchString="@currentFilter"
                           class="page-link">@i</a>
                    </li>
                }

                if (endPage < Model.TotalPages)
                {
                    if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a asp-action="OutboundIndex" asp-route-pageNumber="@Model.TotalPages" asp-route-searchString="@currentFilter" class="page-link">@Model.TotalPages</a>
                    </li>
                }
            }

            <li class="page-item @nextDisabled">
                <a asp-action="OutboundIndex"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-searchString="@currentFilter"
                   class="page-link" title="Trang sau">
                    <i class="fa-solid fa-angle-right"></i>
                </a>
            </li>

            <li class="page-item @nextDisabled">
                <a asp-action="OutboundIndex"
                   asp-route-pageNumber="@Model.TotalPages"
                   asp-route-searchString="@currentFilter"
                   class="page-link" title="Trang cuối">
                    <i class="fa-solid fa-angles-right"></i>
                </a>
            </li>
        </ul>
    </nav>
    
    <div class="text-center small text-muted mt-2">
        Đang xem trang <strong>@Model.PageIndex</strong> trên tổng số <strong>@Model.TotalPages</strong>
    </div>
}
<style>
    .pagination .page-link {
        color: #2c3e50;
        border-radius: 0 !important;
        border: 1px solid #dee2e6;
        margin: 0 2px;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #2c3e50;
        border-color: #2c3e50;
        color: white;
        font-weight: bold;
        box-shadow: 2px 2px 0px #bdc3c7;
    }

    .pagination .page-link:focus, .pagination .page-link:hover {
        background-color: #ecf0f1;
        color: #000;
        box-shadow: none;
    }
</style>
