@model WMS_Demo.Models.InboundReceipt

@{
    ViewData["Title"] = "Chi tiết Phiếu Nhập Kho";
    var totalQty = Model.Details.Sum(x => x.Quantity);
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h2 class="text-primary"><i class="bi bi-file-earmark-text"></i> @ViewData["Title"]</h2>
        <div>
            <a asp-action="InboundIndex" class="btn btn-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            <button type="button" onclick="printReceipt()" class="btn btn-outline-dark shadow-sm ms-2"><i class="bi bi-printer"></i> In phiếu</button>
        </div>
    </div>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-light fw-bold text-uppercase">
            Thông tin chung
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Mã phiếu:</dt>
                        <dd class="col-sm-8 fw-bold text-primary">PN-@Model.Id.ToString("D6")</dd>

                        <dt class="col-sm-4 text-muted">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4 text-muted">Người tạo:</dt>
                        <dd class="col-sm-8">@(Model.CreatedBy?.UserName ?? "Hệ thống")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Nhà cung cấp:</dt>
                        <dd class="col-sm-8 fw-bold">@(Model.Supplier?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4 text-muted">Ghi chú:</dt>
                        <dd class="col-sm-8 fst-italic">@(string.IsNullOrEmpty(Model.Notes) ? "Không có ghi chú" : Model.Notes)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-info text-white fw-bold">
            <i class="bi bi-box-seam"></i> Danh sách hàng hóa nhập
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Mã vật tư</th>
                        <th>Tên vật tư</th>
                        <th>ĐVT</th>
                        <th>Vị trí lưu kho</th>
                        <th class="text-end">Số lượng</th>
                        <th class="text-end pe-4">Đơn giá</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.Details)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-primary">@(detail.Item?.Code ?? "Unknown")</td>
                            <td>@(detail.Item?.Name ?? "Unknown")</td>
                            <td>@(detail.Item?.Unit ?? "-")</td>
                            <td>
                                <span class="badge bg-warning text-dark">
                                    @(detail.Location?.Code ?? "Chưa xếp")
                                </span>
                            </td>
                            <td class="text-end fw-bold">@detail.Quantity.ToString()</td>
                            <td class="text-end pe-4">@detail.UnitPrice.ToString()</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="4" class="text-end fw-bold">Tổng cộng:</td>
                        <td class="text-end fw-bold text-danger fs-5">@totalQty.ToString()</td>
                        <td class="pe-4"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function printReceipt() {
        window.print();
    }
</script>
}

<style>
    @@media print {
        .btn, header, footer, .main-header, .main-sidebar { 
            display: none !important; 
        }
        .card { 
            border: 1px solid #000 !important; 
            box-shadow: none !important;
        }
        .container-fluid {
            padding: 0 !important;
        }
    }
</style>